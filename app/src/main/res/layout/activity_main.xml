<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_rectangle"
        android:padding="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product"
        app:srcCompat="@drawable/bills"

        />

    <ImageView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="64dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_rectangle"
        android:padding="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory"
        app:srcCompat="@drawable/orders" />

    <ImageView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_rectangle"
        android:padding="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cart" />

    <ImageView
        android:id="@+id/inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="64dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_rectangle"
        android:padding="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inventory" />

    <ImageView
        android:id="@+id/customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_rectangle"
        android:padding="40dp"
        app:layout_constraintTop_toBottomOf="@+id/order"
        app:srcCompat="@drawable/customer" />

    <TextView
        android:id="@+id/product_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font1"
        android:text="Add Product"
        android:textSize="12dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/product"
        app:layout_constraintEnd_toEndOf="@+id/product"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/product" />

    <TextView
        android:id="@+id/inventory_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Inventory"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font1"
        android:textSize="12dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/inventory"
        app:layout_constraintEnd_toEndOf="@+id/inventory"
        app:layout_constraintStart_toStartOf="@+id/inventory" />

    <TextView
        android:id="@+id/bill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font1"
        android:textSize="12dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/bill"
        app:layout_constraintEnd_toEndOf="@+id/bill"
        app:layout_constraintStart_toStartOf="@+id/bill" />

    <TextView
        android:id="@+id/orders_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font1"
        android:textSize="12dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/order"
        app:layout_constraintEnd_toEndOf="@+id/order"
        app:layout_constraintStart_toStartOf="@+id/order" />

    <TextView
        android:id="@+id/customer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customers"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font1"
        android:textSize="12dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/customer"
        app:layout_constraintEnd_toEndOf="@+id/customer"
        app:layout_constraintStart_toStartOf="@+id/customer" />


</androidx.constraintlayout.widget.ConstraintLayout>